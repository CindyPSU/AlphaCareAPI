<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane id="GridPane" prefHeight="400.0" prefWidth="600.0" 
          xmlns:fx="http://javafx.com/fxml/1" 
fx:controller="View.PatientDetailFXMLController" alignment="center" hgap="10" vgap="10">
    <padding><Insets top="40" right="10" bottom="40" left="10"/></padding>
    
    <Label text="First Name" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="firstName" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Label text="Middle Initial" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="middleInitial" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <Label text="Last Name" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="lastName" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <Label text="Preferred Name" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="preferredName" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    <Label text="Birthday" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <DatePicker fx:id="birthday" GridPane.columnIndex="1" GridPane.rowIndex="5" editable="false" showWeekNumbers="true"/>
    <Label text="Phone Number" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <TextField fx:id="phoneNumber" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
    <Label text="Address" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
    <TextField fx:id="address" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
    <Label text="Email" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
    <TextField fx:id="emailAddress" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
    
    <Button fx:id="saveButton" text="Save" GridPane.columnIndex="0" GridPane.rowIndex="9" GridPane.columnSpan="2" onAction="#didSelectSaveButton"/>
    
</GridPane>